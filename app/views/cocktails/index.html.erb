<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.makemycocktail.com/images/Cocktail_Banner.jpg);">
  <div class="container">
    <h1>Cocktail Generator</h1>
    <p>Add your favorites cocktails and become the best cocktail designer!</p>
    <div>
    <%= link_to "Generate a cocktail", new_cocktail_path, :class => "btn btn-flat" %>
    </div>
    <div class= "search-input">
      <form novalidate="novalidate" class="simple_form search" action="cocktails/search" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="query" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search for a cocktail
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <center> <h1>My cocktail list</h1> </center>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>

      <% if cocktail.picture.attached? %>

      <a href= <%= "cocktails/#{cocktail.id}" %> >
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.picture.key, crop: :fill %>)">
          <%= cocktail.name %>
        </div>
      </a>
      <% else %>
      <a href= <%= "cocktails/#{cocktail.id}" %> >
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg')">
          <%= cocktail.name %>
        </div>
      </a>
      <% end %>

    <% end %>

  </div>
</div>



